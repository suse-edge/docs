#: l10n/source/edge.xml:2202
msgid "Isolate the cores 1-30 and 33-62"
msgstr "コア1-30および33-62を分離します。"

#. type: Content of: <book><part><chapter><section><informaltable><tgroup><tbody><row><entry><para>
#: l10n/source/edge.xml:2203 l10n/source/edge.xml:2627
msgid "skew_tick"
msgstr "skew_tick"

#. type: Content of: <book><part><chapter><section><informaltable><tgroup><tbody><row><entry><para>
#: l10n/source/edge.xml:2204 l10n/source/edge.xml:2222
#: l10n/source/edge.xml:2628 l10n/source/edge.xml:2646
